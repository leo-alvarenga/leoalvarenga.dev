---
import { Image } from "astro:assets";
import type { Skill } from "../../../../data";

interface Props {
  skill: Skill;
}

const { skill } = Astro.props;
const { back, front } = skill;

const isLocal = front.isSrc && front.content.startsWith("/");
---

{
  front.isSrc ? (
    <Image
      alt={back.content}
      class="w-8 md:w-16"
      height={32}
      inferSize={!isLocal}
      width={32}
      src={front.content}
    />
  ) : (
    <i class={`${front.content} text-4xl md:text-6xl`} />
  )
}
