---
import { slide } from "astro:transitions";
import { Icon } from "astro-icon/components";

import { getLangFromUrl, useTranslation } from "../../../../config";
import HeroTitle from "./HeroTitle.astro";
import Section from "../../../Section.astro";
import Button from "../../../Button.astro";

const [language] = getLangFromUrl(Astro.url);
const { t } = useTranslation({ language });
---

<Section className="lg:w-[80%] relative z-0" id="hero">
  <div
    class={`
      z-10 pt-4 pb-8 px-4
      mx-auto min-h-[70vh]
      md:min-h-screen flex
      flex-col items-center
      justify-center md:justify-start
      max-w-screen-xl text-center
      lg:py-16 lg:px-12
    `}
    transition:animate={slide({ duration: "0.4s" })}
  >
    <p class="mb-8 text-lg text-subtext-0 lg:text-xl sm:px-16 xl:px-48">
      {t("home.hero.text.sm")}
    </p>

    <HeroTitle title="home.hero.text.lg" />

    <span class="mt-12 inline-flex gap-4 items-center justify-center">
      <Button>
        <button
          class={`
            w-full h-full text-lg
            px-4 py-2 cursor-pointer
          `}
          onclick="scrollToContact()"
        >
          {t("home.hero.action.contact")}
        </button>
      </Button>

      <Button>
        <button
          class={`
            inline-flex gap-2 items-center
            w-full h-full text-lg
            px-4 py-2 cursor-pointer
          `}
          onclick="scrollToXp()"
        >
          {t("home.hero.action.more")}

          <Icon class="animate-bounce" name="fa6-solid:arrow-down" />
        </button>
      </Button>
    </span>
  </div>

  <span class="w-full h-full overflow-hidden absolute top-0 -z-10">
    <div id="stars"></div>
  </span>
</Section>

<script lang="js">
  function scrollToXp() {
    document.getElementById("xp")?.scrollIntoView();
  }

  function scrollToContact() {
    document.getElementById("contact")?.scrollIntoView();
  }
</script>

