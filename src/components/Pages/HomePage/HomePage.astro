---
import { getLangFromUrl, useTranslation, type Language } from "../../../config";
import BasicLayout from "../../../layouts/BasicLayout.astro";
import Experience from "./Experience/Experience.astro";
import Hero from "./Hero/Hero.astro";
import Projects from "./Projects/Projects.astro";
import Skills from "./Skills/Skills.astro";
import Name from "./TitleCard/Name.astro";

interface Props {
  language?: Language;
}

const [language] = getLangFromUrl(Astro.url);
const { t } = useTranslation({ language });
---

<BasicLayout pageTitle={t("home.meta.title")}>
  <link
    rel="stylesheet"
    type="text/css"
    href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css"
  />

  <Hero />
  <Name />
  <Experience />
  <Skills />
  <Projects />
</BasicLayout>
